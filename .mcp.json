{
    "mcpServers": {
        "godot": {
            "command": "node",
            "args": [
                "${WORKSPACE_HOME}/code/01_AI/godot-mcp/build/index.js"
            ],
            "env": {
                "DEBUG": "false",
                "GODOT_PATH": "${GODOT_HOME}"
            }
        },
        "godot-lsp": {
            "command": "node",
            "args": [
                "${WORKSPACE_HOME}/code/01_AI/minimal-godot-mcp/dist/index.js"
            ],
            "env": {
                "GODOT_LSP_PORT": "6005",
                "GODOT_WORKSPACE_PATH": "${WORKSPACE_HOME}/code/07_games/knight-odyssey"
            }
        }
    }
}