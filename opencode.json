{
    "$schema": "https://opencode.ai/config.json",
    "instructions": [
        "AGENTS.md",
        "CONTRIBUTING.md"
    ],
    "permission": {
        "skill": {
            "godot-architect": "allow",
            "godot-developer": "allow"
        }
    },
    "mcp": {
        "godot-mcp": {
            "type": "local",
            "command": [
                "node",
                "{env:WORKSPACE_HOME}/code/01_AI/godot-mcp/build/index.js"
            ],
            "environment": {
                "DEBUG": "false",
                "GODOT_PATH": "{env:GODOT_HOME}"
            }
        },
        "minimal-godot": {
            "type": "local",
            "command": [
                "node",
                "{env:WORKSPACE_HOME}/code/01_AI/minimal-godot-mcp/dist/index.js"
            ],
            "environment": {
                "GODOT_LSP_PORT": "6005",
                "GODOT_WORKSPACE_PATH": "{env:WORKSPACE_HOME}/code/07_games/brave-legend"
            }
        },
        "godot-ultimate": {
            "type": "local",
            "command": [
                "node",
                "{env:WORKSPACE_HOME}/code/01_AI/godot-mcp-ultimate/dist/index.js"
            ],
            "environment": {
                "GODOT_PROJECT_PATH": "{env:WORKSPACE_HOME}/code/07_games/brave-legend",
                "GODOT_PATH": "{env:GODOT_HOME}",
                "GODOT_LSP_PORT": "6005"
            }
        },
        "filesystem": {
            "type": "local",
            "command": [
                "npx",
                "-y",
                "@modelcontextprotocol/server-filesystem",
                "{env:WORKSPACE_HOME}/code/07_games/brave-legend"
            ]
        }
    }
}